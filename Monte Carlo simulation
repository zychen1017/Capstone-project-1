library(xlsx)
xdata <- read.xlsx('Table2.xlsx',1)

X <- xdata$X

set.seed(66666)

n <- 10; r <- 100
b0 <- 25; b1 <- 0.5; su <- 3

b0hat <- numeric(r)
b1hat <- numeric(r)

x <- rnorm(n,4,1)

for (j in 1:r){
  u <- rnorm(n,0,3)
  y <- b0 + b1*x + u
  
  bhat <- coefficients(lm(y~x))
  b0hat[j] <- bhat['(Intercept)']
  b1hat[j] <- bhat['x']
  
}
